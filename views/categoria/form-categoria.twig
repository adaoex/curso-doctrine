{% extends "layout.twig" %}

{% block scripts %}
    <script src="{{ asset('/js/categorias.js') }}"></script>
{% endblock%}

{% import "forms.twig" as forms %}

{% block content %}
    <h2>Categoria</h2>
        
    <form method="post" id="form-categoria" class="form-horizontal" 
        {% if categoria.id > 0 %}
          action="{{ path('categoria_editar', {id: categoria.id}) }}" >
        {% else %}
            action="{{ path('novo_categoria') }}" >
        {% endif %}
        
        {{ forms.input('id', categoria.id, 'hidden',0) }}
        
        {% if categoria.id > 0 %}
            <input type="hidden" id="_method" name="_method" value="PUT">
        {% endif %}
        <div class="form-group">
            <label class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-10">
                {{ forms.input('nome', categoria.nome, 'text', 255, 'digite o nome do categoria') }}
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {% if categoria.id|length > 0 %}
                    <button type="submit" class="btn btn-default">Salvar Alterações</button>
                {% else %}
                    <button type="submit" class="btn btn-default">Salvar</button>
                {% endif %}
            </div>
        </div>
    </form>
{% endblock %}